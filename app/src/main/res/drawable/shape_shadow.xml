<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 相当于padding -->
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="#ff03a9f4" />
                    <corners android:radius="30dip"/>
                    <size android:height="50dp" android:width="300dp"></size>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="5dp" android:top="4dp">
                <shape>
                    <solid android:color="#aa03a9f4" />
                    <corners android:radius="30dip"/>
                    <size android:height="50dp" android:width="300dp"></size>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <!-- 相当于padding -->
            <item android:bottom="4dp" android:right="0dp">
                <shape>
                    <solid android:color="#03a9f4" />
                    <corners android:radius="30dip"/>
                    <size android:height="50dp" android:width="300dp"></size>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>