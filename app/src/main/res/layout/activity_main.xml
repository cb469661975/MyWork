    <com.example.cheng.myapplication.LivingHintView
        android:id="@+id/vvv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#aa000000"
        android:visibility="gone" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fadingEdgeLength="10dp"
        android:focusable="true"
        android:requiresFadingEdge="horizontal"
        android:singleLine="true"
        android:text="123123123121231231231312312" />

    <com.example.cheng.myapplication.ui.WaveView
        android:layout_width="match_parent"
        android:layout_height="100dp" />


    <com.example.cheng.myapplication.ui.AutoScrollTextView
        android:id="@+id/tv_text"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:inputType="text"
        android:singleLine="true"
        android:text="生日宴我吃饭了我真的吃饭了"
        android:textColor="#000"
        android:textSize="18sp" />

    <com.example.cheng.myapplication.ui.WorldNoticeView
        android:id="@+id/worldnoticeview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.cheng.myapplication.GlobalNoticeView
        android:id="@+id/globalnotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="start"
        android:text="start" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:onClick="stop"
        android:text="stop" />

    <com.example.cheng.myapplication.ui.BannerPointView
        android:id="@+id/bannerPoint"
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#000" />

    <com.example.cheng.myapplication.ui.LinearBanner
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>
