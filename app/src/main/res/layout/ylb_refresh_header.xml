<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pull_height">

        <TextView
            android:id="@+id/header_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/pull_width"
            android:text="下拉刷新"
            android:textColor="#a3a3a3"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/headerIv"
            android:layout_width="@dimen/pull_gif_wd"
            android:layout_height="@dimen/pull_gif_wd"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/header_tv_msg"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-60dp" />

    </RelativeLayout>

</FrameLayout>