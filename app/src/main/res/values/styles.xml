<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/shape_divider</item>
    </style>


    <style name="FullScreenDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

    </style>

    <style name="DialogLight" parent="Theme.AppCompat.Light">
        <item name="android:alertDialogTheme">@style/TPLightDialog</item>
    </style>

    <style name="BackgroundWithAnimation" parent="DialogLight">
        <item name="android:windowAnimationStyle">@style/activity_normal_animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/bibi_transparent</item>
    </style>

    <style name="TPLightDialog" parent="Theme.AppCompat.Light.Dialog.Alert"></style>

    <style name="activity_normal_animation">
        <item name="android:activityOpenEnterAnimation">@anim/bibi_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/bibi_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/bibi_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/bibi_slide_right_out</item>
    </style>

    <declare-styleable name="GifWidget">
        <attr name="gifs" format="reference" />
        <attr name="pauseds" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>

    <style name="Widget.GifView" parent="@android:style/Widget" />
    
    <style name="fresco_theme">
        <item name="actualImageScaleType" >focusCrop</item>
        <item name="backgroundImage">focusCrop</item>
        <item name="fadeDuration">300</item>

        <!--fresco:backgroundImage="@color/blue"-->
